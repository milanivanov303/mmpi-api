{
    "name": "codix/api-mmpi",
    "version": "1.0.0",
    "description": "The API for MMPI tool.",
    "keywords": ["mmpi", "api", "REST", "lumen"],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url":  "http://rhode.codixfr.private/Enterprise-Apps/api-core"
        },
        {
            "type": "vcs",
            "url":  "http://rhode.codixfr.private/Enterprise-Apps/api-sdk"
        },
        {
            "type": "vcs",
            "url":  "http://rhode.codixfr.private/Enterprise-Apps/forks/json-schema"
        },
        {
            "type": "vcs",
            "url":  "http://rhode.codixfr.private/Enterprise-Apps/forks/php-jira-rest-client"
        }
    ],
    "require": {
        "bschmitt/laravel-amqp": "^2.0",
        "rap2hpoutre/laravel-log-viewer": "^1.3",
        "doctrine/dbal": "^2.8",
        "lesstif/php-jira-rest-client": "2.2.1",
        "fguillot/json-rpc": "^1.2",
        "phpoffice/phpspreadsheet": "^1.13",
        "maatwebsite/excel": "^3.1",
        "codix/api-core": "^2.3",
        "graham-campbell/gitlab": "^5.2",
        "guzzlehttp/guzzle": "^7.2",
        "http-interop/http-factory-guzzle": "^1.0",
        "vimeo/psalm": "^4.7"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~7.0",
        "mockery/mockery": "~1.0",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "^2.6",
        "doctrine/dbal": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/",
            "Modules\\": "Modules/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --colors=always ./tests/Unit",
        "test:functional": "phpunit --colors=always ./tests/Functional",
        "test:unit:coverage": "phpunit --coverage-text --colors=never ./tests/Unit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 0
    }
}
