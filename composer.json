{
    "name": "codix/api-mmpi",
    "version": "1.0.0",
    "description": "The API for MMPI tool.",
    "keywords": ["mmpi", "api", "REST", "lumen"],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url":  "http://rhodecode.codixfr.private/Enterprise-Apps/api-core"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-json": "*",
        "ext-ldap": "*",
        "ext-dom": "*",
        "ext-xml": "*",
        "ext-simplexml": "*",
        "ext-mbstring": "*",
        "ext-pdo_mysql": "*",
        "laravel/lumen-framework": "5.7.*",
        "vlucas/phpdotenv": "~2.2",
        "codix/api-core": "^1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~7.0",
        "mockery/mockery": "~1.0",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "^2.6",
        "doctrine/dbal": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/",
            "Modules\\": "Modules/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --colors=always ./tests/Unit",
        "test:functional": "phpunit --colors=always ./tests/Functional",
        "test:unit:coverage": "phpunit --coverage-text --colors=never ./tests/Unit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true
    }
}
