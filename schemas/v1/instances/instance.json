{
    "$id": "Instance",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Instance object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "name": {
            "type": "string",
            "maxLength": 128
        },
        "instance_type": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            },
            "description": "iMX instances register"
        },
        "instance_type_id": {
            "type": "string"
        },
        "play_as_demo": {
            "type": "string",
            "enum": ["y", "n"],
            "default": "n"
        },
        "owner": {
            "oneOf": [
                {"type": "integer"},
                {"$ref": "/v1/enum-values/enum-value.json"}
            ]
        },
        "status": {
            "oneOf": [
                {"type": "integer"},
                {"$ref": "/v1/enum-values/enum-value.json"}
            ]
        },
        "timezone": {
            "type": "string",
            "maxLength": 64
        },
        "host": {
            "type": "string",
            "maxLength": 128
        },
        "user": {
            "type": ["string", "null"],
            "maxLength": 32,
            "default": "null"
        },
        "db_user": {
            "type": ["string", "null"],
            "maxLength": 32,
            "default": "null"
        },
        "db_password": {
            "type": ["string", "null"],
            "default": "null"
        },
        "db_host": {
            "type": ["string", "null"],
            "default": "null"
        },
        "db_port": {
            "type": ["string", "null"],
            "default": "null"
        },
        "db_SID": {
            "type": ["string", "null"],
            "default": "null"
        },
        "tns_name": {
            "type": ["string", "null"],
            "maxLength": 64,
            "default": "null"
        },
        "has_patch_install_in_init": {
            "type": "integer",
            "enum": [1, 0],
            "default": 0,
            "description": "Defines whether the instance has patches installation into instance intialization process"
        },
        "environment_type": {
            "$ref": "/v1/delivery-chains/delivery-chain-type.json",
            "description": "Environment type associated with delivery_chain_types"
        },
        "environment_type_id": {
            "type": "integer"
        },
        "delivery_chains": {
            "type": "array",
            "items": {
                "$ref": "/v1/delivery-chains/delivery-chain.json"
            }
        }
    }
}
