{
    "$id": "Instance",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Instance object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "integer"
        },
        "name": {
            "type": "string"
        },
        "instance_type": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "play_as_demo": {
            "type": ["string", "null"]
        },
        "owner": {
            "$ref": "/v1/enum-values/enum-value.json"
        },
        "status": {
            "$ref": "/v1/enum-values/enum-value.json"
        },
        "timezone": {
            "type": "string"
        },
        "host": {
            "type": "string"
        },
        "user": {
            "type": ["string", "null"]
        },
        "db_user": {
            "type": ["string", "null"]
        },
        "tns_name": {
            "type": ["string", "null"]
        },
        "has_patch_install_in_init": {
            "type": "integer"
        },
        "environment_type": {
            "$ref": "/v1/delivery-chains/delivery-chain-type.json"
        }
    }
}
