{
    "$id": "Project",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Project object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "integer"
        },
        "name": {
            "type": "string",
            "description": "Project name",
            "maxLength": 128,
            "example": "ABSA",
            "$filters": {
                "$func": "checkInDb",
                "$vars": {
                    "rule": "exists:projects,name"
                }
            },
            "$messages": {
                "$filters": "Project with this name does not exist"
            }
        },
        "clnt_cvs_dir": {
            "type": ["string", "null"]
        },
        "pnp_type": {
            "type": ["string", "null"]
        },
        "clnt_code": {
            "type": ["string", "null"]
        },
        "clnt_code2": {
            "type": ["string", "null"]
        },
        "src_prefix": {
            "type": ["string", "null"]
        },
        "src_prefix2": {
            "type": ["string", "null"]
        },
        "src_itf_prefix": {
            "type": ["string", "null"]
        },
        "getdcli": {
            "type": ["string", "null"]
        },
        "getdcli2": {
            "type": ["string", "null"]
        },
        "activity": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "activite_gpc": {
            "type": ["string", "null"]
        },
        "activite_sdr": {
            "type": "string"
        },
        "imx_formstag": {
            "type": ["string", "null"]
        },
        "forms_lng_dlvry": {
            "type": "integer"
        },
        "uses_transl_upd": {
            "type": "integer"
        },
        "inactive": {
            "type": "integer"
        },
        "display_name": {
            "type": "string"
        },
        "group": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "country": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "communication_lng": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "delivery_method": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "se_mntd_by_clnt": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "tl_mntd_by_clnt": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "njsch_mntd_by_clnt": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "trans_mntd_by_clnt": {
            "oneOf": [
                {"$ref": "/v1/enum-value.json"},
                {"type": "null"}
            ]
        },
        "sla_from": {
            "type": ["string", "null"]
        },
        "sla_to": {
            "type": ["string", "null"]
        },
        "modified_by": {
            "oneOf": [
                {"$ref": "/v1/user.json"},
                {"type": "null"}
            ]
        },
        "type_business": {
            "type": ["string", "null"]
        }
    }
}
