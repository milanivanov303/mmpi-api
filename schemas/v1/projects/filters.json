{
    "$id": "ProjectFilters",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": {
            "$filters": {
                "$func": "checkInDb",
                "$vars": {
                    "rule": "unique:projects,name"
                }
            },
            "$messages": {
                "$filters": "Project name already registered"
            }
        },
        "project_specifics": {
            "items": {
                "properties": {
                    "id": {
                        "$filters": {
                            "$func": "checkInDb",
                            "$vars": {
                                "rule": "exists:project_specifics,id"
                            }
                        },
                        "$messages": {
                            "$filters": "Project specific does not exist"
                        }
                    }
                },
                "required": ["id"]
            }
        }
    }
}
