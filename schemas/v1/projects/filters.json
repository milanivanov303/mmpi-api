{
    "$id": "ProjectFilters",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": {
            "$filters": {
                "$func": "checkInDb",
                "$vars": {
                    "rule": "unique:projects,name"
                }
            },
            "$messages": {
                "$filters": "Project name already registered"
            }
        }
    }
}
