{
    "$id": "ProjectEvent",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Project event object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "integer"
        },
        "project": {
            "$ref": "/v1/projects/project.json"
        },
        "made_by": {
            "$ref": "/v1/user.json"
        },
        "made_on": {
            "type": "string",
            "format": "datetime"
        },
        "project_event_status": {
            "$ref": "/v1/enum-values/enum-value.json"
        },
        "project_event_type": {
            "$ref": "/v1/enum-values/enum-value.json"
        },
        "description": {
            "type": ["string", "null"]
        },
        "event_start_date": {
            "type": ["string", "null"],
            "format": "date"
        },
        "event_end_date": {
            "type": ["string", "null"],
            "format": "date"
        }
    }
}
