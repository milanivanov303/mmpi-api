{
    "$id": "Branch",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Branch object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "integer"
        },
        "name":  {
            "type": "string",
            "maxLength": 255,
            "description": "Name of the branch",
            "example": "default"
        },
        "repo_type": {
            "$ref": "/v1/enum-values/enum-value.json",
            "description": "Repozitory id from enum_values tables of type repository_type"
        },
        "description": {
            "type": ["string", "null"]
        },
        "created_at": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp of the record"
        },
        "made_by": {
            "oneOf": [
                {
                    "$ref": "/v1/user.json",
                    "description": "User who created the record"
                },
                {"type": "null"}
            ]
        },
        "repo_master_branch": {
            "type": ["integer", "null"],
            "enum": [0, 1, null],
            "description": "1 - Master Branch for the Repo"
        }
    }
}
