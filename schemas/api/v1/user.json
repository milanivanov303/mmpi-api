{
    "$id": "User",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "User object",
    "properties": {
        "name": {
            "type": "string",
            "description": "User full name",
            "example": "John Doe",
            "maxLength": 256
        },
        "username": {
            "type": "string",
            "description": "User username",
            "example": "jdoe",
            "maxLength": 50
        },
        "email": {
            "type": "string",
            "description": "User email",
            "example": "jdoe@codix.fr",
            "format": "email",
            "maxLength": 50
        },
        "password": {
          "type": "string"
        },
        "sid": {
            "type": "string",
            "maxLength": 60
        },
        "sidfr": {
            "type": ["string", "null"],
            "maxLength": 60
        },
        "uidnumber": {
            "type": ["integer", "null"]
        },
        "status": {
            "type": "integer"
        },
        "department": {
            "type": "string",
            "description": "User department",
            "example": "Enterprise Applications"
        },
        "access_group": {
            "type": "string",
            "description": "User access group",
            "example": "developers"
        },
        "manager": {
            "oneOf": [
                {
                    "$ref": "/api/v1/user.json",
                    "description": "Manager",
                    "example": "ivasilev"
                },
                {"type": "null"}
            ]
        },
        "deputy": {
            "oneOf": [
                {
                    "$ref": "/api/v1/user.json",
                    "description": "Deputy",
                    "example": "ivasilev"
                },
                {"type": "null"}
            ]
        }
    }
}
